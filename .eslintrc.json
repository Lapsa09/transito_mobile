{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard",
    "prettier",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "space-before-function-paren": 0,
    "camelcase": 0,
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "no-extra-boolean-cast": 0,
    "react/jsx-key": 0,
    "no-unused-vars": 0,
    "no-undef": 0,
    "@typescript-eslint/no-explicit-any": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
